{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm-build",
      "type": "shell",
      "windows": {
        "command": "npm run build"
      }
    },
    {
      "label": "post-npm-build",
      "type": "shell",
      "windows":{
        "command": "del *.js;del static/js/*.*;del static/media/*.svg;del static/css/main.*.*;xcopy build . /Y /E /S"
      },
      "dependsOn": [
        "npm-build"
      ]
    },
    {
      "label": "jekyll-build",
      "type": "shell",
      "windows": {
        "command": "bundle exec jekyll build"
      },
      "dependsOn": [
        "post-npm-build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}