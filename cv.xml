---
layout: null
title: CV Henrik Becker
---
<?xml version="1.0" encoding="utf-8"?>{% assign profile = site.data.profile %}
<!DOCTYPE resume PUBLIC "-//Sean Kelly//DTD Resume 1.5.1//EN" "http://xmlresume.sourceforge.net/dtd/resume.dtd">
<resume>
	<header>
		<name>
			<firstname>{{ profile.contact_info.first_name }}</firstname>
			<surname>{{ profile.contact_info.last_name }}</surname>
		</name>
		<address>
			<street>{{ profile.contact_info.address.street }}</street>
			<city>{{ profile.contact_info.address.city }}</city>
			<postalCode>{{ profile.contact_info.address.postal_code	 }}</postalCode>
			<country>{{ profile.contact_info.address.country }}</country>
		</address>
		<contact>
			<phone>{{ profile.contact_info.phone }}</phone>
		</contact>
	</header>
	<objective>
		<para>{% for line in profile.summary %}
			{{ line }}{% endfor %}
		</para>
	</objective>
	<history>
		{% for project in site.projects reversed %}<job>
			<jobtitle>{{ project.title | replace: "&amp;", "&" | replace: "&", "&amp;" }}</jobtitle>
			{% assign employers = site.employment | where:'id', project.employer %}{% for employer in employers limit: 1 %}<employer>{{ employer.organization.name }}</employer>{% endfor %}
			<period>
				<from>
					<date>
						<month>{{ project.start_date | date: "%B" }}</month>
						<year>{{ project.start_date | date: "%Y" }}</year>
					</date>
				</from>
				<to>
					{% if end_date %}<date>
						<month>{{ project.end_date | date: "%B" }}</month>
						<year>{{ project.end_date | date: "%Y" }}</year>
					</date>{% else %}<present />
					{% endif %}
				</to>
			</period>
			<achievements>
			{% if project.achievements %}
				{% for achievement in project.achievements %}<achievement>{{ achievement | strip_newlines }}</achievement>
				{% endfor %}
			{% else %}
				<achievement>{{ project.description | strip_newlines }}</achievement>
			{% endif %}</achievements>
		</job>
	{% endfor %}{% assign project = nil %}
	</history>
	<academics>
		<degrees>
		{% for education in profile.education %}<degree>
				<institution>{{ education.school }}</institution>
				<date>
					<month>{{ employer.start_date | date: "%B" }}</month>
					<year>{{ employer.start_date | date: "%Y" }}</year>
				</date>
			</degree>{% endfor %}	
		</degrees>
	</academics>
	<skillarea>
		<title>Skills</title>
		<skillset>
		{% for skill in profile.skills.languages %}
			<skill>{{ skill }}</skill>
		{% endfor %}			
		{% for skill in profile.skills.frameworks %}
			<skill>{{ skill }}</skill>
		{% endfor %}			
		{% for skill in profile.skills.methods %}
			<skill>{{ skill }}</skill>
		{% endfor %}			
		{% for skill in profile.skills.tools %}
			<skill>{{ skill }}</skill>
		{% endfor %}			
		{% for skill in profile.skills.databases %}
			<skill>{{ skill }}</skill>
		{% endfor %}			
		</skillset>
	</skillarea>
	<copyright>
		<year>{{ site.time | date: '%Y' }}</year>
		<legalnotice>
			<para>{{ site.author.name }}</para>
		</legalnotice>
	</copyright>
</resume>